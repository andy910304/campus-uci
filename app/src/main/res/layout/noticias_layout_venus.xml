<?xml version="1.0" encoding="utf-8"?>
<cu.uci.utils.views.RippleViewSeguridad
	android:id="@+id/noticia_ripple"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<android.support.v7.widget.CardView
		android:id="@+id/cv_noticia"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/card_view_marging"
		card_view:cardCornerRadius="1dp"
		card_view:cardElevation= "3dp">
		<LinearLayout
			android:background="@color/seguridad_color"
			android:padding="10dp"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:id="@+id/ll_iv_rss"

				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="match_parent">

				<ImageView
					android:visibility="gone"
					android:id="@+id/iv_rss"
					android:layout_width="120dp"
					android:layout_height="120dp"
					android:scaleType="fitXY"/>
			</LinearLayout>

			<LinearLayout
				android:layout_marginLeft="5dp"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<TextView
					android:id="@+id/tv_title"
					android:maxLines="2"
					android:textColor="@color/fab_material_blue_500"
					android:text="@string/barchart"
					android:textSize="14sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<TextView
					android:id="@+id/tv_descript"
					android:textColor="@color/text_color"
					android:text="@string/barchart"
					android:textSize="16sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<TextView
					android:visibility="gone"
					android:id="@+id/tv_date"
					android:textColor="@color/text_color"
					android:text="@string/barchart"
					android:textSize="14sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
			</LinearLayout>



		</LinearLayout>

	</android.support.v7.widget.CardView>

</cu.uci.utils.views.RippleViewSeguridad>